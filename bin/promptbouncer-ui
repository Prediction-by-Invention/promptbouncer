#!/bin/bash

##################################################
#  Prompt Bouncer server start script
##################################################
pwd

##################################################
#  change to dir of script
##################################################
cd "${0%/*}"

##################################################
#  change to dir of repo root
##################################################
cd ..


##################################################
#  run the server using streamlit
##################################################
echo "Starting Prompt Bouncer..."
streamlit run ./src/ui/main.py