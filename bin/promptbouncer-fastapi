#!/bin/bash

##################################################
#  Prompt Bouncer server start script
##################################################
pwd

##################################################
#  change to dir of script
##################################################
cd "${0%/*}"

##################################################
#  change to dir of main.py
##################################################
cd ..
cd src/server

##################################################
#  run the server using uvicorn
##################################################
echo "Starting Prompt Bouncer..."
uvicorn main:app --host 0.0.0.0 --port 10001