#!/bin/sh

##################################################
#  Prompt Bouncer docker build script
##################################################
pwd

##################################################
#  change to dir of script
##################################################
cd "${0%/*}"

##################################################
#  change to dir of app
##################################################
cd ..

##################################################
#  source the .env file to load environment variables
##################################################
source ./bin/load_env_vars.sh

docker build --build-arg OPENAI_API_KEY="$OPENAI_API_KEY"  -t promptbouncer:latest .
